{
  "name": "flogo-mqttbroker-model",
  "type": "flogo:mqttbroker",
  "version": "0.1.0",
  "title": "Timer",
  "description": "Simple mqtt broker trigger",
  "homepage": "https://qingcloudhx/flow-plugin/tree/master/trigger/mqttbroker",
  "settings": [
    {
      "name": "address",
      "type": "string",
      "required": true,
      "description": "The broker listener address(tcp://127.0.0.1:1883)"
    },
    {
      "name": "event",
      "type": "string",
      "required": true,
      "description": "The down of client event"
    }
  ],
  "handler": {
  },
  "output": [
    {
      "name": "head",
      "type": "object",
      "properties": {
        "properties": {
          "cmd": {
            "type": "string"
          },
          "clieng-id": {
            "type": "string"
          },
          "poctocol": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "description": "The message head"
    },
    {
      "name": "body",
      "type": "bytes",
      "description": "The message body"
    }
  ],
  "event": [
    {
      "name": "head",
      "type": "object",
      "description": "The event head"
    },
    {
      "name": "body",
      "type": "bytes",
      "description": "The event body"
    }
  ]
}
