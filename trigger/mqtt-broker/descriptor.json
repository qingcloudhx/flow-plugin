{
    "name": "flogo-mqtt",
    "type": "flogo:trigger",
    "version": "0.1.0",
    "title": "Receive MQTT Message",
    "description": "Simple MQTT Trigger",
    "homepage": "https://github.com/qingcloudhx/edge-contrib/tree/master/trigger/mqtt",
    "settings":[
      {
        "name": "url",
        "type": "string",
        "required": true,
        "description": "The broker url"
      }
    ],
    "output": [
      {
        "name": "data",
        "type": "bytes",
        "description": "The message recieved"
      }
    ],
    "handler": {
      "settings": [
        {
          "name": "url",
          "type": "string",
          "description": "The mqtt client"
        },
        {
          "name": "topic-up",
          "type": "string",
          "description": "The topic to subscribe to"
        },
        {
          "name": "topic-down",
          "type": "string",
          "description": "The topic to subscribe to"
        },
        {
          "name": "qos",
          "type": "int",
          "allowed": [0,1,2],
          "description": "The Quality of Service"
        }
      ]
    }
  }
  